[alias]
  amend = commit --amend
  br = branch
  co = checkout
  pf = push --force-with-lease
  st = status
  unstage = reset HEAD --
  w  = whatchanged
[apply]
  whitespace = nowarn
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  interactive = auto
  pager = true
  status = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
[diff]
  compactionHeuristic = true
  ignoresubmodules = untracked
[fetch]
  prune = true
[gpg]
  program = gpg
[hub]
  protocol = https
[include]
  path = ~/.gitconfig_local
[merge]
  summary = true
[pager]
  branch = false
[pull]
  rebase = true
[push]
  default = upstream
[remote "origin"]
  push = HEAD
[submodule]
  fetchJobs = 4